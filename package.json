{
  "name": "apollo-server-ts",
  "version": "1.0.0",
  "description": "",
  "main": "server.ts",
  "scripts": {
    "start": "ts-node src/server.ts",
    "docker:up": "docker-compose up --build",
    "clear": "rimraf build/",
    "dev": "npm run clear && webpack --config webpack.dev.js",
    "build:webpack": "npm run clear && webpack --config webpack.prod.js && node build/server.js",
    "watch": "nodemon --watch 'src/**/*.ts' --ignore 'src/**/*.spec.ts' --exec 'ts-node' src/server.ts"
  },
  "keywords": [
    "apollo-server",
    "apollo",
    "graphql",
    "typescript"
  ],
  "author": "LFSCamargo",
  "license": "MIT",
  "dependencies": {
    "apollo-server": "^2.2.2",
    "bcryptjs": "^2.4.3",
    "graphql": "^0.13.2",
    "graphql-tag": "^2.10.0",
    "jsonwebtoken": "^8.4.0",
    "mongoose": "^5.7.5",
    "ts-node": "^7.0.1",
    "typescript": "^3.1.6"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/graphql": "^14.0.3",
    "@types/jsonwebtoken": "^8.3.0",
    "@types/mongoose": "^5.3.1",
    "auto-reload-webpack-plugin": "^1.1.0",
    "nodemon": "^1.18.6",
    "rimraf": "^2.6.3",
    "ts-loader": "^5.3.3",
    "tslint": "^5.11.0",
    "webpack": "^4.29.6",
    "webpack-cli": "^3.3.0",
    "webpack-merge": "^4.2.1",
    "webpack-node-externals": "^1.7.2"
  }
}
